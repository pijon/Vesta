rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Recipe images - uploaded by users
    match /users/{userId}/recipe-images/{imageId} {
      // Anyone authenticated can read recipe images (for family sharing)
      allow read: if request.auth != null;
      
      // Only the owner can upload/update/delete their images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Future: Profile pictures, etc.
    match /users/{userId}/profile/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
